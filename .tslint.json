{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "ban-comma-operator": true,
        "class-name": false,
        "no-any": true,
        "no-bitwise": false,
        "no-console": false,
        "no-import-side-effect": true,
        "no-parameter-reassignment": true,
        "only-arrow-functions": false,
        "semicolon": "always",
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    },
    "rulesDirectory": []
}
