#!/usr/bin/env bash

export WD=$PWD

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

if [ ! -f "$WD/.jsinit" ]; then
    npm install --no-save typescript typescript-bundle tslint
    touch "$WD/.jsinit"
fi

sedtrailing () {
    sed -i 's/[ \t]\+$//' "$1"
}

export -f sedtrailing

htmlall () {
    find \
        . \
        -type f \
        -name '*.html' \
        -not -path "./node_modules/*" \
        -exec bash -c '
            echo "$1"
            tidy -config "$WD/.tidyrc" -q -m "$1"
            sedtrailing "$1"
        ' bash {} \;
}

tsall () {
    # shellcheck disable=SC1004
    find \
        . \
        -type f \
        -name '*.ts' \
        -not -path "./node_modules/*" \
        -exec bash -c '
            echo "$1"
            npx tslint -c "$WD/.tslint.json" "$1" && clang-format -i "$1"
        ' bash {} \;
}

export -f htmlall
export -f tsall
